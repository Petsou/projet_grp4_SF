{% extends 'base.html.twig' %}

{% block title %}Créer un compte | {{ parent() }}{% endblock %}

{% block body %}

<div class="container mt-5 mb-5 pt-3 pb-3 bg-white" style="border:5px solid black; border-radius:10px; box-shadow:2px 2px 5px black;">
    <div class="row">
        <div class="col-lg-4 offset-lg-4">

            {% for flashError in app.flashes('verify_email_error') %}
                <div class="alert alert-danger" role="alert">{{ flashError }}</div>
            {% endfor %}

            <h1 class="font-weight-bold">Créer un compte</h1>

            {# Début du formulaire #}

            {{ form_start(registrationForm, {
                attr: {
                    novalidate: "novalidate"
                }
            }) }}


                {#{{ form_row(registrationForm.email) }}
                {{ form_row(registrationForm.plainPassword, {
                    label: 'Password'
                }) }}
                {{ form_row(registrationForm.agreeTerms) }}#}

                {# Firstname #}
                <div class="form-group">
                    {{ form_label(registrationForm.firstname) }}
                    {{ form_widget(registrationForm.firstname) }}
                    {{ form_help(registrationForm.firstname) }}
                    {{ form_errors(registrationForm.firstname) }}
                </div>

                {# Lastname #}
                <div class="form-group">
                    {{ form_label(registrationForm.lastname) }}
                    {{ form_widget(registrationForm.lastname) }}
                    {{ form_help(registrationForm.lastname) }}
                    {{ form_errors(registrationForm.lastname) }}
                </div>

                {# Birthday #}
                <div class="form-group">
                    {{ form_label(registrationForm.birthday) }}

                    <div class="row">
                        <div class="col-4">
                            {{ form_widget(registrationForm.birthday.day) }}
                        </div>
                        <div class="col-4">
                            {{ form_widget(registrationForm.birthday.month) }}
                        </div>
                        <div class="col-4">
                            {{ form_widget(registrationForm.birthday.year) }}
                        </div>
                    </div>
                    {{ form_help(registrationForm.birthday) }}
                    {{ form_errors(registrationForm.birthday) }}
                </div>

                {# Email #}
                <div class="form-group">
                        {{ form_label(registrationForm.email) }}
                        {{ form_help(registrationForm.email) }}
                        {{ form_widget(registrationForm.email) }}
                        {{ form_errors(registrationForm.email) }}
                </div>

                {# password #}
                <div class="form-group">
                    {{ form_label(registrationForm.plainPassword) }}
                    {{ form_widget(registrationForm.plainPassword) }}
                    {{ form_help(registrationForm.plainPassword) }}
                    {{ form_errors(registrationForm.plainPassword) }}
                </div>

                {# agreeTerms #}
                <div class="form-group">
                    {{ form_label(registrationForm.agreeTerms) }}
                    {{ form_widget(registrationForm.agreeTerms) }}
                    {{ form_help(registrationForm.agreeTerms) }}
                    {{ form_errors(registrationForm.agreeTerms) }}
                </div>

                {# Bouton de soumission #}
                <button type="submit" class="btn btn-primary">Inscription</button>

                {# Fin du formulaire #}
            {{ form_end(registrationForm) }}

            <a href="{{ path('app_login') }}">Compte déjà créé ?</a>

        </div>
    </div>
</div>

{% endblock %}
