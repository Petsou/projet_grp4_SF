{% extends 'base.html.twig' %}

{% set title = "Modifier la prestation : " ~ entretiens.title %}


{# Page titre #}
{% block title %}{{ title }} - {{ parent() }}{% endblock %}



{# Page content #}
{% block body %}
    <div class="container mt-5 mb-5 pt-3 pb-3 bg-white" style="border:5px solid black; border-radius:10px; box-shadow:2px 2px 5px black;">

    {# header / Titre de la page #}
        <header class="page-header">
            <h1 class="page-title">{{ title }}</h1>
        </header>
    

    {# Barre d'actions (ajouter un produit) #}
    <div class="page-toolbar text-right mt-3">
        <a href="{{ path('entretien:show', {id: entretiens.id}) }}" class="btn btn-secondary btn-sm">Annuler</a>
        <a href="{{ path('entretien:index') }}" class="btn btn-secondary btn-sm">Retour Ã  la liste des entretiens</a>
    </div>

    
    {# Formulaire de creation du produit #}
    {% include "entretien/_form.html.twig" with {form: form, btn_label:"Modifier"} only %}


</div>
{% endblock %}